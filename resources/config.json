{
    "debug": true,
    "verbose": true,
    "noshboard": {
        "newsTicker": {
            "font": "courier new",
            "fontSize": "36px",
            "scrollSpeed": ".3"
        },
        "grid": {
            "lines": {
                "baseSpacing": "5",
                "baseWidth": "1",
                "baseColor": "rgb(35, 244, 129)",
                "centerWidth": "2",
                "centerColor": "rgb(171, 27, 135)"
            },
            "labels": {
                "spacing": "50",
                "width": "1",
                "color": "rgb(0, 0, 0)",
                "font": "tahoma",
                "fontSize": "11px",
                "textColor": "rgb(43, 56, 238)"
            }
        }
    },
    "html": {
        "elems": {
            "main": {
                "id": "noshboard"
            },
            "section": {
                "id": "noshboard-content"
            },
            "div": {
                "id": "canvas-stack"
            }
        },
        "cvs": {
            "background": {
                "name": "background",
                "id": "background-canvas"
            },
            "message": {
                "name": "message",
                "id": "message-canvas"
            },
            "foreground": {
                "name": "foreground",
                "id": "foreground-canvas"
            }
        },
        "template": {
            "bulletin": {
                "templateId": "bulletin-template",
                "headingId": "bulletin-title-_",
                "paragraphId": "bulletin-message-_"
            }
        }
    }
}